definition
	OBSERVATION[at0000] matches {    -- Crohn's Disease Activity Index (CDAI)
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									CLUSTER[at0004] occurrences matches {0..1} matches {    -- Patient reported stool pattern
										items cardinality matches {1..*; unordered} matches {
											ELEMENT[at0005] occurrences matches {0..1} matches {    -- Average number of liquid or soft stools per day over seven days
												value matches {
													DV_COUNT matches {*}
												}
											}
											ELEMENT[at0015] occurrences matches {0..1} matches {    -- Multiplier result for the number of liquid or soft stools
												value matches {
													DV_COUNT matches {*}
												}
											}
											ELEMENT[at0006] occurrences matches {0..1} matches {    -- Using diphenoxylate or loperimide for diarrhea
												value matches {
													30|[local::at0007],
													0|[local::at0008]
												}
											}
										}
									}
									ELEMENT[at0009] occurrences matches {0..1} matches {    -- Average abdominal pain rating over seven days
										value matches {
											0|[local::at0010],
											35|[local::at0011],
											70|[local::at0012],
											105|[local::at0013]
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {    -- General well being each day over seven days
										value matches {
											0|[local::at0016],
											49|[local::at0017],
											98|[local::at0018],
											147|[local::at0019],
											196|[local::at0020]
										}
									}
									ELEMENT[at0021] occurrences matches {0..6} matches {    -- Complications
										value matches {
											20|[local::at0022],
											20|[local::at0023],
											20|[local::at0024],
											20|[local::at0025],
											20|[local::at0026],
											20|[local::at0027]
										}
									}
									ELEMENT[at0028] occurrences matches {0..1} matches {    -- Finding of an abdominal mass
										value matches {
											0|[local::at0029],
											20|[local::at0030],
											50|[local::at0031]
										}
									}
									CLUSTER[at0032] occurrences matches {0..1} matches {    -- Anemia and weight change
										items cardinality matches {1..*; unordered} matches {
											ELEMENT[at0033] occurrences matches {0..1} matches {    -- Absolute deviation of hematocrit from 47% in males or 42% in females
												value matches {
													DV_COUNT matches {*}
												}
											}
											ELEMENT[at0034] occurrences matches {0..1} matches {    -- Multiplier result for the absolute deviation of hematocrit
												value matches {
													DV_COUNT matches {*}
												}
											}
											ELEMENT[at0035] occurrences matches {0..1} matches {    -- Percentage deviation from standard weight
												value matches {
													DV_COUNT matches {*}
												}
											}
										}
									}
									ELEMENT[at0036] occurrences matches {0..1} matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..1100|}
											}
										}
									}
									ELEMENT[at0037] occurrences matches {0..1} matches {    -- Total score interpretation
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0038,    -- Asymptomatic remission
													at0039,    -- Mildly to moderately active Crohn's disease
													at0040,    -- Moderately to severely active Crohn's disease
													at0041]    -- Severely active to fulminant disease
												}
											}
										}
									}
									ELEMENT[at0042] occurrences matches {0..1} matches {    -- Comment
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0043] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0044] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

