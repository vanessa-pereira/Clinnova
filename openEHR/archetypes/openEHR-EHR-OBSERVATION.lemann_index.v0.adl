									CLUSTER[at0004] occurrences matches {0..1} matches {    -- Structuring lesions
										items cardinality matches {1..*; unordered} matches {
											CLUSTER[at0011] occurrences matches {0..1} matches {    -- Upper track
												items cardinality matches {1..*; unordered} matches {
													ELEMENT[at0005] occurrences matches {0..1} matches {    -- Organ
														value matches {
															DV_CODED_TEXT matches {
																defining_code matches {
																	[local::at0007;at0007]    -- Upper track
																}
															}
														}
													}
													ELEMENT[at0015] occurrences matches {0..1} matches {    -- Segment
														value matches {
															DV_CODED_TEXT matches {
																defining_code matches {
																	[local::
																	at0016,    -- Esophagus
																	at0017,    -- Stomach
																	at0018]    -- Duodenum
																}
															}
														}
													}
													ELEMENT[at0006] occurrences matches {0..1} matches {    -- Investigational method
														value matches {
