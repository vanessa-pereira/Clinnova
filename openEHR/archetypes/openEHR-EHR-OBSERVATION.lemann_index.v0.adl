															1|[local::at0020],
															2|[local::at0021],
															3|[local::at0022]
														}
													}
												}
											}
											CLUSTER[at0023] occurrences matches {0..1} matches {    -- Small bowel
												items cardinality matches {1..*; unordered} matches {
													ELEMENT[at0024] occurrences matches {0..1} matches {    -- Organ
														value matches {
															DV_CODED_TEXT matches {
																defining_code matches {
																	[local::at0025;at0025]    -- Small bowel
																}
															}
														}
													}
													ELEMENT[at0027] occurrences matches {0..1} matches {    -- Segment
														value matches {
															DV_CODED_TEXT matches {
																defining_code matches {
																	[local::at0033]    -- Each 20-cm segment
																}
															}
														}
													}
													ELEMENT[at0026] occurrences matches {0..1} matches {    -- Investigational method
														value matches {
															DV_CODED_TEXT matches {
																defining_code matches {
																	[local::at0014]    -- MRI or CT
																}
															}
														}
													}
													ELEMENT[at0028] occurrences matches {0..1} matches {    -- Grades
														value matches {
															1|[local::at0020],
															2|[local::at0021],
															3|[local::at0022]
														}
													}
												}
											}
											CLUSTER[at0034] occurrences matches {0..1} matches {    -- Colon / Rectum
