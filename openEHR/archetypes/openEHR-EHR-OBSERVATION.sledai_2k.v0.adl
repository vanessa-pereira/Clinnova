					description = <"Pleuritic chest pain with pleural rub or effusion, or pleural thickening.">
				>
				["at0027"] = <
					text = <"Pericarditis">
					description = <"Pericardial pain with at least 1 of the following: rub, effusion, electrocardiographic confirmation, echocardiographic confirmation.">
				>
				["at0028"] = <
					text = <"Low complement">
