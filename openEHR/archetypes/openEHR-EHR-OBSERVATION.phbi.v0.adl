definition
	OBSERVATION[at0000] matches {    -- Patient Harvey Bradshaw Index (P-HBI)
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					INTERVAL_EVENT[at0002] occurrences matches {0..*} matches {    -- During the previous week
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] matches {    -- General well-being
										value matches {
											1|[local::at0005],
											2|[local::at0006],
											3|[local::at0007],
											4|[local::at0008],
											5|[local::at0009],
											6|[local::at0010],
											7|[local::at0011],
											8|[local::at0012],
											9|[local::at0013],
											10|[local::at0014]
										}
									}
									ELEMENT[at0015] matches {    -- Abdominal pain
										value matches {
											0|[local::at0016],
											1|[local::at0017],
											2|[local::at0018],
											3|[local::at0019],
											4|[local::at0020],
											5|[local::at0021],
											6|[local::at0022],
											7|[local::at0023],
											8|[local::at0024],
											9|[local::at0025],
											10|[local::at0026]
										}
									}
									ELEMENT[at0027] matches {    -- Diarrhoea frequency
										value matches {
											C_DV_QUANTITY <
												
												list = <
													["1"] = <
														units = <"1/d">
														magnitude = <|1.0..25.0|>
													>
												>
											>
										}
									}
									ELEMENT[at0028] matches {    -- Has a stoma?
										value matches {
											DV_BOOLEAN matches {*}
										}
									}
									ELEMENT[at0029] occurrences matches {0..1} matches {    -- Frequency of stoma bag changes
										value matches {
											C_DV_QUANTITY <
												
												list = <
													["1"] = <
														units = <"1/d">
													>
												>
											>
										}
									}
									ELEMENT[at0030] matches {    -- Has a pouch?
										value matches {
											DV_BOOLEAN matches {*}
										}
									}
									ELEMENT[at0031] occurrences matches {0..1} matches {    -- Frequency of stools in pouch
										value matches {
											C_DV_QUANTITY <
												
												list = <
													["1"] = <
														units = <"1/d">
													>
												>
											>
										}
									}
									ELEMENT[at0032] matches {    -- Joint pain (not caused by strain on sports, work or accident)
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0035]
										}
									}
									ELEMENT[at0036] matches {    -- Eye inflammation (Uveitis)
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0037]
										}
									}
									ELEMENT[at0038] matches {    -- Skin disorder (Erythema)
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0039]
										}
									}
									ELEMENT[at0040] matches {    -- Skin disorder (Pyoderma)
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0039]
										}
									}
									ELEMENT[at0041] matches {    -- Momentarily aphthous ulcers in mouth
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0035]
										}
									}
									ELEMENT[at0042] matches {    -- Anal pain (fissure) while excrement
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0035]
										}
									}
									ELEMENT[at0043] matches {    -- Painful fistula with puss
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0035]
										}
									}
									ELEMENT[at0044] matches {    -- Momentarily abscess (painful sore from anus)
										value matches {
											0|[local::at0033],
											1|[local::at0034],
											1|[local::at0035]
										}
									}
									ELEMENT[at0045] matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..45|}
											}
										}
									}
									ELEMENT[at0049] occurrences matches {0..1} matches {    -- Total score interpretation
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0050,    -- Remission
													at0051,    -- Mild disease
													at0052,    -- Moderate disease
													at0053]    -- Severe disease
												}
											}
										}
									}
									ELEMENT[at0048] occurrences matches {0..1} matches {    -- Comment
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
						width matches {
							DV_DURATION matches {
								value matches {P7D}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0046] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0047] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

